generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String
  username     String        @unique
  chipBalance  Float         @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
  blackjackSessions BlackjackSession[]
}

enum BlackjackStatus {
  ACTIVE
  PLAYER_WON
  DEALER_WON
  PUSH
}

enum TransactionType {
  BET
  WIN
  DEPOSIT
  WITHDRAWAL
}

model Transaction {
  id        String          @id @default(uuid())
  amount    Float
  type      TransactionType
  game      String?
  createdAt DateTime        @default(now())
  userId    String
  user      User            @relation(fields: [userId], references: [id])

  @@index([userId])
}

model BlackjackSession {
  id         String          @id @default(uuid())
  userId     String
  user       User            @relation(fields: [userId], references: [id])
  deck       Json
  playerHand Json
  dealerHand Json
  status     BlackjackStatus @default(ACTIVE)
  betAmount  Float
  outcome    Float           @default(0)
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  @@index([userId])
}
